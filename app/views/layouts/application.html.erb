<!DOCTYPE html>
<html>
  <head>
    <title>FClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <header>
     <p>
     <%= link_to_unless_current "FACEBOOK CLONE", "/" %>
     </p>
      <% if logged_in?%>
        <div class="btn-group" role="group" aria-label="Basic radio tggle button group">
          <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked>
          <label class="btn btn-outline-primary" for="btnradio1"><%= link_to "投稿一覧", pictures_path %></label>

          <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
          <label class="btn btn-outline-primary" for="btnradio2"><%= link_to "ユーザー情報", user_path(current_user.id) %></label>

          <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
          <label class="btn btn-outline-primary" for="btnradio3"><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></label>
        </div>
      <% else %>
        <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
          <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked>
          <label class="btn btn-outline-primary" for="btnradio1"><%= link_to "ログイン", new_session_path %></label>
          <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
          <label class="btn btn-outline-primary" for="btnradio2"><%= link_to "新規作成", new_user_path %></label>
        </div>
      <% end %>
    </header>
  
  
  
    <%= yield %>
  </div>

  </body>
</html>
